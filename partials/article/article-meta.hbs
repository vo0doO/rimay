<div class="article-meta u-meta u-flexCenter u-fontSizeSmall">
    <div class="article-byline u-meta-byline">
        {{#primary_author}}
        <a class="article-byline-author u-fontSizeBase u-fontWeightMedium u-colorHoverPrimary u-colorInherit u-relative u-textCapitalize" aria-label="{{t "Post by"}} {{name}}" href="{{url}}">{{name}}</a>
        <span class="article-byline-meta u-meta-time">
            {{#if twitter}}<a href="{{twitter_url}}" title="{{twitter}}" class="u-colorInherit" target="_blank" rel="noopener noreferrer">{{twitter}}</a>{{/if}}
        {{/primary_author}}
            <span class="article-divider text--green">/</span>
            {{!-- <time class="datetime" datetime="{{date format=" YYYY-MM-DD "}}">{{date published_at timeago="true"}}</time> --}}
            <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time>
            <span class="bull">&bull; {{reading_time seconds=(t "< 1 min read") minute=(t "1 min read") minutes=(t "% min read")}}</span>
        </span>
    </div>

    {{!-- Comments --}}
    {{!-- <div class="article-meta--right u-hide-before-md">
        <div class="js-comments-toggle u-pointer">
            <span class="icon icon--md icon--comment u-primaryColor">{{> "icons/comment"}}</span> {{t "Comments"}}
        </div>
    </div> --}}
</div>