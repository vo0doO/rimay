<div class="rimay-paway-right u-flexColumnTop">
    {{#foreach posts from="2" to="5"}}
        <article class="mini-post u-flex">
            {{#if feature_image}}
                <a href="{{url}}" class="mini-post-media u-relative u-flex0">
                    <img class="mini-post-img u-absolute0 u-image"
                        src="{{img_url feature_image size="m"}}"
                        srcset="{{img_url feature_image size="s"}} 300w,{{img_url feature_image size="m"}} 600w"
                        sizes="(max-width: 1000px) 400px, 600px"
                        alt="{{title}}"
                    />
                </a>
            {{/if}}

            <div class="mini-post-body">
                <h3 class="mini-post-title u-lineHeight1 u-fontWeightBold u-fontSizeLarge">
                    <a href="{{url}}" class="u-colorInherit u-block">{{title}}</a>
                </h3>

                {{!-- Primary Tag --}}
                {{#if primary_tag}}{{#primary_tag}}
                <div class="u-meta u-fontSizeBase u-fontWeightMedium">
                    <div class="u-meta-byline">
                        <span class="u-meta-tag">
                            <a class="u-colorHoverPrimary u-colorInherit u-relative zindex3" href="{{url}}" aria-label="{{name}}">{{name}}</a>
                        </span>
                    </div>
                </div>
                {{/primary_tag}}{{/if}}
            </div>
        </article>
    {{/foreach}}
</div>