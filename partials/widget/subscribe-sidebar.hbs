{{#if @labs.members}}
<div class="witget-subscribe u-textAlignCenter">
    <h5 class="u-fontSize28 u-fontWeightBold u-marginBottom20 u-fontWeightMedium gradient-text--primary">{{t "Newsletter"}}</h5>
    <div class="u-fontSizeSmall u-marginBottom20">{{t "Stay up to date! Get all the latest & greatest posts delivered straight to your inbox"}}</div>

    <form class="witget-subscribe--form wsf" data-members-form="subscribe">
        <div class="form-group">
            <input
                class="subscribe-email u-fontSizeSmall u-block u-marginBottom10"
                data-members-email
                placeholder="{{t "youremail@example.com"}}"
                aria-label="{{t 'Your email address'}}"
                aria-describedby="sidebar-subscribe-btn"
                autocomplete="off"
                required
            />
            <button id="sidebar-subscribe-btn" class="button button--primary u-textUppercase u-sizeFullWidth u-block" type="submit">
                <span class="button-text">{{t "Subscribe"}}</span>
                <svg class="icon icon--loader u-hide"><use xlink:href="#icon-loader"></use></svg>
            </button>
        </div>
        <div class="message-success u-hide"><strong>{{t "Great!"}}</strong> {{t "Check your inbox and click the link to confirm your subscription"}}</div>
        <div class="message-error u-hide">{{t "Please enter a valid email address!"}}</div>
    </form>
</div>
{{/if}}