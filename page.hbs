{{!< default}}

{{!-- Class for <body> --}}
{{#contentFor "special_body_class"}}is-article is-page{{/contentFor}}

{{#post}}

<div class="rimay-wrap">
    <div class="rimay-content">
        <article class="article">
            {{!-- Article Header --}}
            <header class="article-header u-marginBottom30 u-marginTop20">
                <h1 class="article-title">{{title}}</h1>
            </header>
            {{!-- Article Body --}}
            <div class="article-body u-relative">
                {{#if feature_image}}
                <figure class="article-media u-block u-marginAuto u-textAlignCenter">
                    <img class="u-block u-marginAuto rimay-zoom"
                        srcset="{{img_url feature_image size="s"}} 300w,
                                {{img_url feature_image size="m"}} 600w,
                                {{img_url feature_image size="l"}} 1000w,
                                {{img_url feature_image size="xl"}} 2000w"
                        sizes="(max-width: 400px) 300px,(max-width: 730px) 600px, (max-width: 1600px) 100vw"
                        {{!-- sizes="(max-width: 730px) 100vw, (max-width: 1600px) 75vw, 1390px" --}}
                        src="{{img_url feature_image size="xl"}}"
                        alt="{{title}}"
                    />
                </figure>
                {{/if}}

                {{!-- Article Inner --}}
                <div class="article-inner">{{content}}</div>
            </div>
        </article>
    </div>
</div>

{{/post}}