    {{!-- notification Subscribe --}}
    {{#if @labs.members}}
    <div class="subscribe-success-message u-flexCenter">
        <span class="u-fontSize22" style="margin-right:10px">ðŸŽ‰</span> {{t "You've successfully subscribed to"}} {{@site.title}}!
